extends layout

block content
  div(class="page-title")
    h2 #{title}
    p Enter your current password followed by new password
    div(class="errors")
      if errors
        for i in errors
          p #{i}
  form(method='POST', action='/users/changepassword')
    div(class="input-form")
      label(for='current_password') Current Passowrd:
      input#current_password.form-control(type='password', name='current_password', value='')
      label(for='password') New Password:
      input#password.form-control(type='password', name='password', value='')
    div(class="submit-buttons") 
      button.btn.btn-primary(type='submit') Change Passowrd